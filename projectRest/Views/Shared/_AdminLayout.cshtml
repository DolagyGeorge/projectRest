@{
    Layout = null;
}
<!DOCTYPE html>
<html dir="ltr" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            width: 100%;
            background: #f5f6fa;
        }

        .container-fluid, .row, main, .sidebar {
            height: 100vh;
            min-height: 100vh;
        }

        .sidebar {
            background: #23272b !important;
            color: #fff;
            padding-top: 30px;
            min-height: 100vh;
            box-shadow: 2px 0 8px rgba(0,0,0,0.05);
        }

            .sidebar .nav {
                margin-bottom: 30px;
            }

            .sidebar .nav-link {
                margin-bottom: 10px;
                font-size: 1.05rem;
                border-radius: 6px;
                color: #adb5bd !important;
                transition: background 0.2s, color 0.2s;
                padding: 10px 18px;
            }

                .sidebar .nav-link.active, .sidebar .nav-link:hover {
                    background: #343a40;
                    color: #fff !important;
                }

            .sidebar .nav-title {
                font-size: 0.85rem;
                color: #6c757d;
                text-transform: uppercase;
                margin: 18px 0 8px 18px;
                letter-spacing: 1px;
            }

            .sidebar .nav-link i {
                margin-right: 10px;
                font-size: 1.1rem;
            }

        .topbar {
            background: #23272b;
            color: #fff;
            padding: 10px 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            min-height: 56px;
        }

            .topbar .search-box {
                display: flex;
                align-items: center;
                background: #fff;
                border-radius: 4px;
                padding: 2px 8px;
                width: 300px;
            }

                .topbar .search-box input {
                    border: none;
                    outline: none;
                    width: 100%;
                    padding: 6px 8px;
                    font-size: 1rem;
                    background: transparent;
                }

                .topbar .search-box button {
                    background: none;
                    border: none;
                    color: #007bff;
                    font-size: 1.2rem;
                    cursor: pointer;
                }

            .topbar .icons {
                display: flex;
                align-items: center;
                gap: 18px;
            }

        .dashboard-cards {
            display: flex;
            gap: 18px;
            margin-bottom: 30px;
        }

        .dashboard-card {
            flex: 1;
            border-radius: 8px;
            color: #fff;
            padding: 22px 18px 18px 18px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-width: 180px;
            min-height: 110px;
        }

            .dashboard-card.primary {
                background: #0d6efd;
            }

            .dashboard-card.warning {
                background: #ffc107;
                color: #212529;
            }

            .dashboard-card.success {
                background: #198754;
            }

            .dashboard-card.danger {
                background: #dc3545;
            }

            .dashboard-card .btn {
                margin-top: 10px;
                font-size: 0.95rem;
                border-radius: 20px;
                padding: 4px 18px;
            }

        .main-content {
            background: #fff;
            border-radius: 10px;
            padding: 30px 28px;
            margin-top: 24px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }

        .table-search {
            float: right;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="topbar">
        <div style="font-weight:bold;font-size:1.3rem;letter-spacing:1px;">Restaurant</div>
        
        <div class="icons">
            <i class="fas fa-user-circle" style="font-size:1.4rem;"></i>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                 
                    <ul class="nav flex-column">
                        <li class="nav-item">
                           
                        </li>
                    </ul>
                    <div class="nav-title">Store</div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Prodacts">
                                <i class="fas fa-box"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Ordars">
                                <i class="fas fa-shopping-cart"></i> Order
                            </a>
                        </li>
                    </ul>
                    <div class="nav-title">Accounts</div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Customers">
                                <i class="fas fa-users"></i> Clients
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Employees">
                                <i class="fas fa-users"></i> Employees
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="main-content">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>